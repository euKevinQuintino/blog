    script.
      function changeCategory(category) {
        if (category == "esports") {
          document.querySelector(".game-design").style.display = "none";
          document.querySelector(".esports").style.display = "block";
          document.getElementById("esports").style.backgroundColor = "#2f4f4f";
          document.getElementById("esports").style.color = "#fff";
          document.getElementById("gameDesign").style.backgroundColor = "#fff";
          document.getElementById("gameDesign").style.color = "#2f4f4f";
        } else if (category == "game-design") {
          document.querySelector(".esports").style.display = "none";
          document.querySelector(".game-design").style.display = "block";
          document.getElementById("gameDesign").style.backgroundColor = "#2f4f4f";
          document.getElementById("gameDesign").style.color = "#fff";
          document.getElementById("esports").style.backgroundColor = "#fff";
          document.getElementById("esports").style.color = "#2f4f4f";
        }
      }